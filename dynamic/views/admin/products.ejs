<%- include('../includes/head.ejs') %> <%- include('../includes/navigator.ejs')
%>

<main>
  <h1>My Products</h1>
  <p>List of all the products...</p>
  <% if(products.length > 0 ) { %>

  <div class="grid">
    <% for (let product of products) { %>
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>
      <div class="card__image">
        <img src="<%= product.imgUrl %>" alt="<%= product.title %>" />
      </div>
      <div class="card__content">
        <h2 class="product__price">$<%= product.price %></h2>
        <p class="product__description"><%= product.description %></p>
      </div>
      <div class="card__actions">
        <a class="btn" href="/products/<%= product.id %> ">Detail View</a>
      </div>

      <div class="card__actions">
        <a class="btn" href="/admin/products/<%= product.id %>/edit ">Edit</a>
        <a class="btn" href="/admin/products/<%= product.id %>/delete">Delete</a>
      </div>
    </article>
    <% } %>
  </div>

  <% } else { %>

  <h1>No products found!</h1>

  <% } %>
</main>

<%- include('../includes/end.ejs') %>
